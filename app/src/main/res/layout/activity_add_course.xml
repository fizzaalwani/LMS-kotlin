<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_off_white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="0dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/card_background">

            <TextView
                android:text="Create New Course"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:padding="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Course Title -->
            <TextView
                android:text="Course Title *"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etTitle"
                android:hint="e.g., Complete Python Programming"
                android:textColorHint="@color/text_hint"
                android:background="@drawable/input_background"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"/>

            <!-- Category -->
            <TextView
                android:text="Category *"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etCategory"
                android:hint="e.g., Programming, Design, Business"
                android:textColorHint="@color/text_hint"
                android:background="@drawable/input_background"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"/>

            <!-- Level -->
            <TextView
                android:text="Level *"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etLevel"
                android:hint="e.g., Beginner, Intermediate, Advanced"
                android:textColorHint="@color/text_hint"
                android:background="@drawable/input_background"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"/>

            <!-- Subtitle -->
            <TextView
                android:text="Subtitle"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etSubtitle"
                android:hint="Brief course subtitle"
                android:textColorHint="@color/text_hint"
                android:background="@drawable/input_background"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"/>

            <!-- Description -->
            <TextView
                android:text="Description *"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etDescription"
                android:hint="Describe what students will learn"
                android:textColorHint="@color/text_hint"
                android:background="@drawable/input_background"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:minLines="4"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"/>

            <!-- Objectives -->
            <TextView
                android:text="Learning Objectives"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etObjectives"
                android:hint="Key learning outcomes"
                android:textColorHint="@color/text_hint"
                android:background="@drawable/input_background"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"/>

            <!-- Language -->
            <TextView
                android:text="Language *"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etLanguage"
                android:hint="e.g., English, Spanish"
                android:textColorHint="@color/text_hint"
                android:background="@drawable/input_background"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"/>

            <!-- Welcome Message -->
            <TextView
                android:text="Welcome Message"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etWelcome"
                android:hint="Welcome message for students"
                android:textColorHint="@color/text_hint"
                android:background="@drawable/input_background"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"/>

            <!-- Image URL -->
            <TextView
                android:text="Course Image URL"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etImage"
                android:hint="Image URL or ID"
                android:textColorHint="@color/text_hint"
                android:background="@drawable/input_background"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"/>

            <!-- Price -->
            <TextView
                android:text="Price (USD) *"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etPrice"
                android:hint="e.g., 49.99"
                android:textColorHint="@color/text_hint"
                android:inputType="numberDecimal"
                android:background="@drawable/input_background"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="24dp"/>

            <!-- Add Course Button -->
            <Button
                android:id="@+id/btnAddCourse"
                android:text="Create Course"
                android:textColor="@color/background_white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_primary"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:textAllCaps="false"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>