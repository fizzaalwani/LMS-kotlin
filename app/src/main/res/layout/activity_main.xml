<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_off_white"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Logo/Icon Area -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“š"
            android:textSize="72sp"
            android:layout_marginBottom="16dp"/>

        <!-- App Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EduLearn"
            android:textColor="@color/primary_green_dark"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start your learning journey today"
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            android:layout_marginBottom="48dp"
            android:gravity="center"/>

        <!-- Student Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <Button
                android:id="@+id/btnStudent"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="ðŸŽ“ Get Started as Student"
                android:textSize="16sp"
                android:textColor="@color/background_white"
                android:background="@color/primary_green"
                android:textAllCaps="false"
                android:elevation="0dp"/>
        </androidx.cardview.widget.CardView>

        <!-- Instructor Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/card_background">

            <Button
                android:id="@+id/btnInstructor"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="ðŸ‘¨â€ðŸ« Get Started as a Instructor"
                android:textSize="16sp"
                android:textColor="@color/primary_green"
                android:background="@color/card_background"
                android:textAllCaps="false"
                android:elevation="0dp"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>